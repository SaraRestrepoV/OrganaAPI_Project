

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Adquiere una suscripción</a>
</p>

    <section class="bg-light py-5 border-bottom">
        <div class="container px-5 my-5">
            <div class="text-center mb-5">
                <h2 class="fw-bolder">Conoce algunas de nuestras <span class="text-success">suscripciones</span></h2>
                <p class="lead mb-0">Elige la que más se acomode a tus necesidades</p>
            </div>
            <div class="row gx-5 justify-content-center">

                <div class="col-lg-6 col-xl-4">
                    <div class="card mb-5 mb-xl-0">
                        <div class="card-body p-5">
                            <div class="small text-uppercase fw-bold text-muted">Semanal</div>
                            <div class="mb-3">
                                <span class="display-6 fw-bold">$80.000</span>
                                <span class="text-muted">/ semana</span>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    <strong>1 menú semanal</strong>
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    1 Modificación del menú con especialista en nutrición
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Menú con 21 platos diferentes: entrada, plato fuerte y postre
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Despacho diario sin costo a 1 domicilio
                                </li>
                            </ul>
                            <div class="d-grid"><a class="btn btn-outline-success" href="#!">Adquirir Suscripción</a></div>
                        </div>
                    </div>
                </div>
                <!-- Pricing card pro-->
                <div class="col-lg-6 col-xl-4">
                    <div class="card mb-5 mb-xl-0">
                        <div class="card-body p-5">
                            <div class="small text-uppercase fw-bold">
                                <i class="bi bi-star-fill text-warning"></i>
                                Quincenal
                            </div>
                            <div class="mb-3">
                                <span class="display-6 fw-bold">$100.000</span>
                                <span class="text-muted">/ 2 semanas</span>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    <strong>2 menús semanales</strong>
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    2 Modificaciones del menú con especialista en nutrición
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Menú con 42 platos diferentes: entrada, plato fuerte y postre
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Despacho diario sin costo a 1 domicilio
                                </li>
                            </ul>
                            <div class="d-grid"><a class="btn btn-outline-success" href="#!">Adquirir Suscripción</a></div>
                        </div>
                    </div>
                </div>
                <!-- Pricing card enterprise-->
                <div class="col-lg-6 col-xl-4">
                    <div class="card">
                        <div class="card-body p-5">
                            <div class="small text-uppercase fw-bold text-muted">Mensual</div>
                            <div class="mb-3">
                                <span class="display-6 fw-bold">$170.000</span>
                                <span class="text-muted">/ mes</span>
                            </div>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    <strong>4 menús semanales</strong>
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Modificaciones ilimitadas al menú con especialista en nutrición
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Menú con 90 platos diferentes personalizables: entrada, plato fuerte y postre
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check text-primary"></i>
                                    Despacho diario sin costo a más de 2 domicilios
                                </li>
                            </ul>
                            <div class="d-grid"><a class="btn btn-outline-success" href="#!">Adquirir Suscripción</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#CategoryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}