@model Organa.DAL.Entities.Dish

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas cancelar la orden?</h3>
<div>
    <h4>Orden: @Model.Name</h4>
    <hr />
    <dl class="row">
        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped" id="DishesTable">
                <thead>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Image)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Value)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedDate)
                        </td>
                    </tr>  
                </thead>
             </table>   
        </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
    </form>
</div>

