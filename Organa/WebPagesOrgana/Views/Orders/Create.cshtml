@model Organa.DAL.Entities.Order

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-success text-center mt-5">@ViewData["Title"]</h1>


<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" value="Pendiente" class="form-control" readonly/>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="details" class="control-label"></label>
                <select asp-for="details" class="form-control"></select>
                <span asp-validation-for="details" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Dishes" class="control-label"></label>
                <select asp-for="Dishes" asp-items="Html.GetEnumSelectList<WebPagesOrgana.Models.Enums.Categories>()" class="form-control"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="value" class="control-label"></label>
                <input asp-for="value" class="form-control" />
                <span asp-validation-for="value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ordenar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}